            <li>
                @Html.ActionLink("Statistics", "Statistics", "Cashier", new { @id = "js-li-statistics" })
            </li>
            <li class="js-li">
                @Html.ActionLink("Log out", "Logout", "Cashier")
            </li>
            <li class="js-li">
                Hi, @ViewBag.user
            </li>
        </ul>
    </nav>

    <div id="content">
        @RenderBody()
    </div>
    @Styles.Render("~/Content/css/general.css")
</body>
</html>
