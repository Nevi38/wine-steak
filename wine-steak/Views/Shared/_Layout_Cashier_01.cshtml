<body class="cashier">
    <nav>
        <img class="logo" src="~/Content/img/logo-footer.png" />

        <ul class="list-group-horizontal">
            <li>
                @Html.ActionLink("Payment", "Index", "Cashier", new { @id = "js-li-payment" })
