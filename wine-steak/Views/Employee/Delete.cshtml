@model wine_steak.Models.MonAn

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href='https://fonts.googleapis.com/css?family=Varela Round' rel='stylesheet'>
<link rel="stylesheet" type="text/css" href="~/Content/css/delete.css" />

<div>
    <h2>Xóa Món Ăn</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="list-item">
        <div class="list-item-image">
            <img src="~/Content/img/@Model.Anh" />
        </div>
        <div class="list-item-info">
            <div class="list-item-name">
                @Html.DisplayFor(model => model.TenMon, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="list-item-desc">
                @Html.DisplayFor(model => model.MoTa, new { @class = "form-control", @placeholder = "Mô tả món ăn" })
            </div>

            <div class="list-item-bottom">
                <div class="list-item-money">
                    @Html.DisplayFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control" } }) VNĐ | @Html.DisplayFor(model => model.Calories, new { htmlAttributes = new { @class = "form-control" } }) Calories | @Html.DisplayFor(model => model.SoLuongMon, new { htmlAttributes = new { @class = "form-control" } }) Phần
                </div>
            </div>

        </div>
    </div>
    <div>
        @ViewBag.ThongBao
    </div>

    @using (Html.BeginForm("ConfirmDelete/" + Model.id, "Employee", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="link-delete">
                <input type="submit" value="Xóa Món" class="btn btn-default" />
            </div>
        </div>

    }
    <div class="link-list">
        @Html.ActionLink("❮❮ Về Trang Danh Sách Món", "List")
    </div>
</div>
